CSS (App.css)

.container {
  max-width: 800px;
  margin: auto;
  padding: 20px;
  text-align: center;
}

.cards {
  display: flex;
  justify-content: space-around;
}

.card {
  width: 200px;
  padding: 20px;
  border: 1px solid #ccc;
  border-radius: 10px;
  text-align: center;
}

.card img {
  width: 100%;
}

button {
  background-color: #007bff;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

button.selected {
  background-color: green;
}

.next-btn {
  margin-top: 20px;
  padding: 10px;
  background-color: gray;
  cursor: not-allowed;
}

.next-btn:not(:disabled) {
  background-color: #28a745;
  cursor: pointer;
}


